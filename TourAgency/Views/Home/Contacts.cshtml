@inject IViewLocalizer Localizer

@{
    ViewBag.Title = Localizer["ContactUsTitle"];
}

<h2>@Localizer["ContactUsTitle"]</h2>

<div class="contact-section">
    <p>@Localizer["HelpPlanAdventure"]</p>

    <div class="contact-info">
        <h3>@Localizer["ContactInformation"]</h3>
        <p><strong>@Localizer["Phone"]:</strong> +1 (234) 567-890</p>
        <p><strong>@Localizer["Email"]:</strong> contact@touragency.com</p>
        <p><strong>@Localizer["Address"]:</strong> 123 Travel Street, Adventure City, Country</p>
    </div>

    <h3>@Localizer["OfficeHours"]</h3>
    <ul>
        <li>@Localizer["MondayToFridayHours"]</li>
        <li>@Localizer["SaturdayHours"]</li>
        <li>@Localizer["SundayClosed"]</li>
    </ul>

    <h3>@Localizer["ContactFormTitle"]</h3>
    <form method="post" action="/Contact/Submit">
        <div class="form-group">
            <label for="name">@Localizer["NameLabel"]:</label>
            <input type="text" id="name" name="name" class="form-control" required />
        </div>
        <div class="form-group">
            <label for="email">@Localizer["EmailLabel"]:</label>
            <input type="email" id="email" name="email" class="form-control" required />
        </div>
        <div class="form-group">
            <label for="message">@Localizer["MessageLabel"]:</label>
            <textarea id="message" name="message" class="form-control" rows="5" required></textarea>
        </div>
        <button type="submit" class="btn btn-primary">@Localizer["SendMessageButton"]</button>
    </form>
</div>
