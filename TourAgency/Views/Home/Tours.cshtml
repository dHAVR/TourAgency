@model IEnumerable<TourAgency.Models.Tour>

<link href="/css/tours.css" rel="stylesheet" />

<div class="container tour-cards">
    <h2>Available Tours</h2>


    <form asp-action="Tours" method="get" class="mb-4 p-3 rounded shadow-sm" style="background-color: #f8f9fa;">

        <div class="form-group p-3">
            <label for="searchQuery" class="font-weight-bold">Search Tours</label>
            <input type="text" id="searchQuery" name="searchQuery" class="form-control" placeholder="Enter tour name or description" />
        </div>

        <button type="button" class="btn btn-secondary w-100" onclick="toggleFilters()">Filters</button>

        <div id="price-filters" class="form-row mt-3" style="display: none;">
            <div class="col-md-6">
                <label for="minPrice" class="font-weight-bold">Min Price</label>
                <input type="number" id="minPrice" name="minPrice" class="form-control" placeholder="Enter minimum price" step="0.01" />
            </div>
            <div class="col-md-6">
                <label for="maxPrice" class="font-weight-bold">Max Price</label>
                <input type="number" id="maxPrice" name="maxPrice" class="form-control" placeholder="Enter maximum price" step="0.01" />
            </div>
        </div>

        <button type="submit" class="btn btn-primary mt-4 w-100">Search</button>
    </form>


    <div class="row">
        @foreach (var tour in Model)
        {
            <div class="col-md-4">
                <a href="@Url.Action("Details", "Home", new { id = tour.Id })" class="card-link">
                    <div class="card">
                        <img src="data:image;base64,@Convert.ToBase64String(tour.Image)" class="card-img-top" alt="@tour.Name">
                        <div class="card-body">
                            <h5 class="card-title">
                                Visit @tour.Name <i class="fas fa-arrow-right"></i>
                            </h5>
                            <p class="card-text">@tour.Description</p>
                            <p class="price">@tour.Price.ToString("C")</p>
                        </div>
                    </div>
                </a>
            </div>
        }
    </div>
</div>

<script>
    function toggleFilters() {
        var priceFilters = document.getElementById("price-filters");
        if (priceFilters.style.display === "none") {
            priceFilters.style.display = "flex";
        } else {
            priceFilters.style.display = "none";
        }
    }
</script>
